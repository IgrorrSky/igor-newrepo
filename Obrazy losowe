
<!DOCTYPE html>
<html>
<head>
  <title>Obrazy Igor</title>
  <style>
    body {
      margin: 0;
      background: black;
      color: white;
      font-family: sans-serif;
    }

    h1 {
      background: black;
      color: white;
      text-align: center;
      padding: 20px;
      font-size: 28px;
      margin: 0;
    }

    #image-container {
      width: 100%;
      height: calc(100vh - 70px);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    img {
      max-width: 100%;
      max-height: 100%;
      transition: transform 5s;
    }

    .zoom-in {
      transform: scale(1.1);
    }
  </style>
</head>
<body>

  <h1>obrazy Igor</h1>

  <div id="image-container">
    <img id="main-image" src="">
  </div>

  <script>
    const imageLinks = [
      'https://images.unsplash.com/photo-1506744038136-46273834b3fb',
      'https://images.unsplash.com/photo-1493244040629-496f6d136cc3',
      'https://images.unsplash.com/photo-1519681393784-d120267933ba',
      'https://images.unsplash.com/photo-1470770903676-69b98201ea1c',
      'https://images.unsplash.com/photo-1523413651479-597eb2da0ad6',
      'https://images.unsplash.com/photo-1465101162946-4377e57745c3',
      'https://images.unsplash.com/photo-1482192596544-9eb780fc7f66',
      'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee',
      'https://images.unsplash.com/photo-1472214103451-9374bd1c798e',
      'https://images.unsplash.com/photo-1446776811953-b23d57bd21aa'
    ];

    const image = document.getElementById("main-image");

    function loadRandomImage() {
      const randomIndex = Math.floor(Math.random() * imageLinks.length);
      const url = `${imageLinks[randomIndex]}?w=${window.innerWidth}&h=${window.innerHeight}&fit=crop`;
      image.classList.remove("zoom-in");
      const img = new Image();
      img.src = url;
      img.onload = () => {
        image.src = url;
        void image.offsetWidth;
        image.classList.add("zoom-in");
      };
    }

    loadRandomImage();
    setInterval(loadRandomImage, 3000);
  </script>

</body>
</html>
